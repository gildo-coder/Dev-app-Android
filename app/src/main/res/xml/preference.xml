<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory android:title="@string/couleurs_pref" >
    <com.example.dgild.PrefDialog
        android:key="repertoireColorPref"
        android:title="Répertoires"
        android:summary="Choisir une couleur des répertoires"
        android:dialogTitle="Couleur des répertoires" />
</PreferenceCategory>
    <PreferenceCategory
        android:title="Votre remarque">
        <CheckBoxPreference
            android:title="Resumé"
            android:key="resume"
            android:summaryOn="Cocher si vous êtes entrer un peu de resumé"
            android:summaryOff="Pas de resumé"
            android:defaultValue="true"/>
        <EditTextPreference
            android:key="message"
            android:title="Message"
            android:summary="Votre resumé ici"
            android:dialogMessage="Entrer le resumé"
            android:dialogTitle="Resumé"
            android:dependency="resume"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Compliment">
        <ListPreference
            android:key="list"
            android:title="Facilité"
            android:summary="Degré de facilité de l'utilisation de l'Appli"
            android:entries="@array/list" />
    </PreferenceCategory>
</PreferenceScreen>